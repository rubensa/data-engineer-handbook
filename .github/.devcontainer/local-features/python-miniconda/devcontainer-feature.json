{
  // see: https://containers.dev/implementors/features/#devcontainer-feature-json-properties
  "id": "python-miniconda",
  "version": "0.0.1",
  "name": "Python (via conda using Miniconda3)",
  "description": "Installs Python in a conda environment.",
  "documentationURL": "https://github.com/rubensa/devcontainers-features/tree/main/src/python-miniconda",
  "options": {
    "miniconda-version": {
      "type": "string",
      "proposals": [
        "latest",
        "py312_24.3.0-0",
        "py39_24.1.2-0"
      ],
      "default": "latest",
      "description": "Select or enter a miniconda version (https://repo.anaconda.com/miniconda/)."
    },
    "disable-conda-anon-usage": {
      "type": "boolean",
      "default": true,
      "description": "Disable conda anonymous usage statistics?"
    },
    "conda-channels": {
      "type": "string",
      "default": "",
      "description": "Enter a list of conda channels to add."
    },
    "add-conda-bash-completion": {
      "type": "boolean",
      "default": true,
      "description": "Add conda bash completion?"
    },
    "conda-bash-completion-version": {
      "type": "string",
      "proposals": [
        "latest",
        "1.7",
        "1.6",
        "1.5",
        "1.4",
        "1.3",
        "1.2",
        "1.1",
        "1.0"
      ],
      "default": "latest",
      "description": "Select or enter a conda bash completion version (https://github.com/tartansandal/conda-bash-completion/releases)."
    },
    "conda-environment": {
      "type": "string",
      "default": "dev",
      "description": "Enter a conda environment name."
    },
    "conda-packages": {
      "type": "string",
      "proposals": [
        "conda-build pylint pytest"
      ],
      "default": "",
      "description": "Enter a list of conda packages to install."
    },
    "python-version": {
      "type": "string",
      "proposals": [
        "3.12",
        "3.11",
        "3.10",
        "3.9",
        "3.8",
        "3.7",
        "3.6",
        "3.5",
        "2.7"
      ],
      "default": "",
      "description": "Select or enter a python version (conda search python)."
    },
    "pip-packages": {
      "type": "string",
      "proposals": [
        "black flake8 isort"
      ],
      "default": "",
      "description": "Enter a list of pip packages to install."
    }
  },
  "containerEnv": {
    // Set umask to 002 to give group all file permissions
    "UMASK_SET": "002"
  }
}